extends ../../layouts/auth.pug

block content
  .container
    .row.justify-content-center
      .col-md-6.col-lg-4
        .card.my-5
          .card-header.text-center
            h3 Login
          .card-body
            form(action=`${prefixAdmin}/auths/login`, method="post")
              .form-group
                  label(for="email") Email
                  input.form-control(
                      type="email"
                      name="email"
                      id="email"
                      required
                      placeholder="Enter your email"
                  )
              
              .form-group
                  label(for="password") Password
                  input.form-control(
                      type="password"
                      name="password"
                      id="password"
                      required
                      placeholder="Enter your password"
                  )
              
              .form-group.form-check
                input.form-check-input(type="checkbox", name="remember", id="remember")
                label.form-check-label(for="remember") Remember Me
             
              button.btn.btn-primary.btn-block(type="submit") Login
          .card-footer.text-center
            a(href="/forgot-password") Forgot Password?
            |  | 
            a(href="/register") Register