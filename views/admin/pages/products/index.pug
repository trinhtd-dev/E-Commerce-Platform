extends  ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/form-search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug

block content 
    
    +alert-success(3000)
    +alert-error(3000) 
    .card.mb-3
        .card-header Filter and Search
        .card-body
           .row 
                .col-6
                    +filter-status(filterStatus) 
                .col-6 
                    +form-search(keyword)
    +sort()
                            
    
    
    .card.mb-3
        .card-header.text-muted Products List 
        .card-body
            .row 
                .col-6
                    +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
                .col-3 
                    a(href=`${prefixAdmin}/products/create` 
                        class="btn btn-primary float-right"
                        ) + Create Product
    
                        

            table(class= "table table-hover table-sm"
                checkbox-multi
            ) 
                thead 
                    tr
                        th 
                            input(type="checkbox", name="checkAll")
                        th STT 
                        th Images
                        th Title
                        th Price
                        th Position 
                        th Status 
                        th Action
                tbody 
                    each item, index in products
                        tr 
                            td 
                                input(type="checkbox", name="id"
                                    value= item.id
                                )
                            td= index + 1
                            td 
                                img(src=item.thumbnail, alt=item.title, width="80px", height="50px")
                            td #{item.title}
                            td #{item.price}$
                            td
                                input(type="number"
                                    name="position"
                                    value= item.position
                                    min= 1
                                    style= "width: 50px"
                                    class="form-control form-control-sm"
                                    data-id= item.id
                                )
                            td 
                                if(item.status == "active")
                                    a(href="javascript:"
                                        class="badge badge-success"
                                        data-id = item.id
                                        data-status = item.status
                                        button-change-status
                                        ) #{item.status}
                                else 
                                    a(href=`javascript:`
                                        class="badge badge-danger"
                                        data-id = item.id
                                        data-status = item.status
                                        button-change-status
                                        ) #{item.status}
                                   
                            td
                                a(href=`${prefixAdmin}/products/edit/${item.id}` 
                                    class="btn btn-warning btn-sm" 
                                    button-edit-product
                                ) Edit 
                                a(href=`${prefixAdmin}/products/detail/${item.id}` 
                                    class="btn btn-secondary btn-sm"
                                    style="margin-left: 5px" 
                                ) Detail
                                button(class="btn btn-danger btn-sm ml-1" data-id= item.id button-delete-product) Delete
        +pagination(pagination)
    form(action=""
        method="POST"
        form-change-status
        data-path= `${prefixAdmin}/products/change-status`
    ) 
    form(action=""
        method="POST"
        form-delete-product 
        data-path= `${prefixAdmin}/products/delete-product`
    )
    script(src=`/admin/js/product.js`) 
    script(src="/admin/js/script.js") 