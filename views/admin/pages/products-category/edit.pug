extends ../../layouts/default.pug
include ../../mixins/alert.pug
block content
  +alert-error(5000)

  h1.mb-4 Edit Product Category
  form(
    action=`${prefixAdmin}/products-category/edit/${record.id}?_method=PATCH`
    method="POST"
    class="needs-validation"
    enctype ="multipart/form-data"
    novalidate
  )
    .form-group.mb-3
      div
        label(for="title").form-label Title:
      div
        input(
          type="text"
          id="title"
          name="title"
          required
          class="form-control"
          value= record.title 
        )
    .form-group.mb-3
        div
          label(for="parent").form-label Parent:
        div
          input(
            type="text"
            id="parent"
            name="parent"
            class="form-control"
            value = record.parent
          )      
    .form-group.mb-3
      div
        label(for="description").form-label Description:
      div
        textarea(
          tinymce
          id="description"
          name="description"
          rows="5"
          required
          class="form-control"
        )= record.description
     
   

    .form-group.mb-3(form-upload)
      div
        label(for="thumbnail" ).form-label Product Thumbnail:
      div()
        input(
          type="file"
          id="thumbnail"
          name="thumbnail"
          class="form-control-file"
          accept="image/*"
          input-upload 
        )
        img(
          preview-upload
          src= record.thumbnail 
          alt="Thumbnail Preview" 
          style= "max-width: 200px; margin-top: 10px;"

        )
    .form-group.mb-3
      div
        label(for="status").form-label Status:
      div
        .form-check
          input(
            type="radio"
            id="status-active"
            name="status"
            value="active"
            checked= record.status == "active" ? true : false
            class="form-check-input"
          )
          label(for="status-active").form-check-label Active
        .form-check
          input(
            type="radio"
            id="status-inactive"
            name="status"
            value="inactive"
            class="form-check-input"
            checked= record.status == "inactive" ? true : false
          )
          label(for="status-inactive").form-check-label Inactive
    .form-group.mb-3
      div
        label(for="position").form-label Position:
      div
        input(
          type="number"
          id="position"
          name="position"
          class="form-control"
          value= record.position
        )

    button(type="submit").btn.btn-primary Update Product Category 

  script(src="/admin/js/script.js") 