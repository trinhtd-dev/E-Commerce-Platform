extends ../../layouts/normal.pug

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6.col-md-offset-3
        h2 Reset Password
        form(action="/user/password/reset" method="POST")
          .form-group
            label(for="newPassword") New Password
            input#password.form-control(type="password" name="newPassword" required)
          .form-group
            label(for="confirmPassword") Confirm New Password
            input#confirmPassword.form-control(type="password" name="confirmPassword" required)
          button.btn.btn-primary(type="submit") Reset Password